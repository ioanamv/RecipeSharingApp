@page
@model RecipeSharingApp.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

@foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
{
    <p style="color:red">@error.ErrorMessage</p>
}

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <p style="color:green">@Model.SuccessMessage</p>
}

<form method="post">
    <div>
        <label>Username</label>
        <input type="name" asp-for="Username" required />
    </div>
    <div>
        <label>Email</label>
        <input type="email" asp-for="Email" required />
    </div>
    <div>
        <label>Password</label>
        <input type="password" asp-for="Password" required />
    </div>
    <div>
        <label>Confirm Password</label>
        <input type="password" asp-for="ConfirmPassword" required />
    </div>
    <button type="submit">Register</button>
</form>
