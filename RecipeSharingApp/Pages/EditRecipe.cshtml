@page "{id:int}"
@model RecipeSharingApp.Pages.EditRecipeModel
@{
    ViewData["Title"] = "Edit recipe";
}

<h2>@ViewData["Title"]</h2>

<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Recipe.RecipeId" />

    <div class="mb-3">
        <label for="Title" class="form-label">Title</label>
        <input type="text" class="form-control" id="Title" asp-for="Recipe.Title" required>
    </div>

    <div class="mb-3">
        <label for="Category" class="form-label">Category</label>
        <select class="form-select" id="Category" asp-for="Recipe.Category" required>
            <option value="">Select a category</option>
            @foreach (var category in Model.AvailableCategories)
            {
                <option value="@category">@category</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label for="Ingredients" class="form-label">Ingredients</label>
        <textarea class="form-control" id="Ingredients" asp-for="Recipe.Ingredients" rows="3" required></textarea>
    </div>

    <div class="mb-3">
        <label for="Instructions" class="form-label">Instructions</label>
        <textarea class="form-control" id="Instructions" asp-for="Recipe.Instructions" rows="5" required></textarea>
    </div>

    <div class="mb-3">
        <label for="PrepTime" class="form-label">Preparation Time (minutes)</label>
        <input type="number" class="form-control" id="PrepTime" asp-for="Recipe.PreparationTime" required>
    </div>

    <div class="mb-3">
        <label for="Image" class="form-label">Recipe Image</label>
        <input type="file" class="form-control" id="Image">
        @if (!string.IsNullOrEmpty(Model.Recipe.ImageUrl))
        {
            <img src="@Model.Recipe.ImageUrl" alt="Current Image" class="mt-3" style="max-width: 150px; max-height: 150px;" />
        }
    </div>

    <div class="mb-3">
        <label for="Region" class="form-label">Region</label>
        <select class="form-select" id="Region" asp-for="Recipe.Region" required>
            <option value="">Select a region</option>
            @foreach (var region in Model.AvailableRegions)
            {
                <option value="@region">@region</option>
            }
        </select>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <button type="submit" class="btn btn-success">Save</button>
        <a asp-page="/MyRecipes" class="btn btn-secondary">Cancel</a>
    </div>
</form>

