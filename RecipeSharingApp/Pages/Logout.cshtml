@page
@model RecipeSharingApp.Pages.LogoutModel

<body>
    <div class="container d-flex justify-content-center align-items-center mt-4">
        <div class="card shadow-lg p-4 text-center" style="max-width: 400px; width: 100%; border-radius: 15px;">
            <h3 class="text-center text-primary">Logout</h3>
            <p class="mt-2 text-center text-secondary">Are you sure you want to logout?</p>
            <div class="text-center">
                <form method="post" class="d-flex justify-content-center gap-4">
                    <button type="submit" class="btn btn-danger btn-md">Yes, logout</button>
                    <a href="/Index" class="btn btn-secondary btn-md">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</body>